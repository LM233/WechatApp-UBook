.main{
  width:100%;
  margin-bottom: 100rpx;
}
.container {
  display: flex;
  flex-direction: column;
}

.title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 70px;
  margin-bottom: 1px solid #ededed;
  position: fixed;
  top: 0;
  background-color: #5cadff;
}
.button-group{
  display:flex;
  flex-direction: row;
  align-items: center;
  height:100%;
}
.but2{
  display:flex;
  flex-direction: column;
  align-items: center;
  background: #19be6b;
  height:100%;
}
.but3{
  display:flex;
  flex-direction: column;
  align-items: center;
  background: #ed3f14;
  height:100%;
}
.icon{
  margin-top: 20%;
}
.text{
  margin-top: 7px;
}
.page{
  margin-bottom: 60px;
}
.show{
  display: flex;
  flex-direction: row;
}
.show image{
  height:110rpx;
